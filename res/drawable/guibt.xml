<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle" android:useLevel="false">
            <stroke android:width="0.5dp" android:color="#783ec6f8" />

            <corners android:radius="30dp" />

            <solid android:color="@color/white1" />
        </shape></item>
    <item android:state_pressed="false"><shape android:shape="rectangle" android:useLevel="false">
            <stroke android:width="0.5dp" android:color="#783ec6f8" />

            <corners android:radius="30dp" />

            <solid android:color="@color/white1" />
        </shape></item>
    <item><shape android:shape="rectangle" android:useLevel="false">
            <stroke android:width="0.5dp" android:color="#3ec6f8" />

            <corners android:radius="30dp" />

            <solid android:color="@color/white1" />
        </shape></item>

</selector>