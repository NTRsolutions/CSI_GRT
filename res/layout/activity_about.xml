<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_background"
    tools:context="com.growatt.shinephone.activity.AboutActivity"
    >
    <include layout="@layout/header_view" android:id="@+id/headerView"/>


<RelativeLayout
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="@dimen/x160" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x16"
        android:background="@drawable/icon"
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:textSize="@dimen/x14"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x21"
        />

</RelativeLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:orientation="vertical" >
    </LinearLayout>
<RelativeLayout
    android:id="@+id/relative_agreement"
        android:layout_width="wrap_content"
        android:background="@drawable/item_selector"
        android:layout_height="@dimen/x55" >
   

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/x35"
        android:layout_height="@dimen/x35"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/agreement"
        android:layout_marginLeft="@dimen/x20" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x22"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toLeftOf="@+id/ivBase"
        android:text="@string/about_agreement"
        android:textColor="#333333"
        android:textSize="@dimen/x16" />

    <ImageView
        android:id="@+id/ivBase"
        android:layout_width="@dimen/x25"
        android:layout_height="@dimen/x18"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x12"
        android:src="@drawable/frag4" />

</RelativeLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#dedede"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:orientation="vertical" >
    </LinearLayout>
    <RelativeLayout
    android:id="@+id/relative_update"
    android:layout_width="wrap_content"
    android:background="@drawable/item_selector"
    android:layout_height="@dimen/x55" >

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/x35"
        android:layout_height="@dimen/x35"
        android:background="@drawable/upate"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x20" />

    <TextView
        android:id="@+id/textView51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x22"
        android:layout_toRightOf="@+id/imageView5"
        android:layout_toLeftOf="@+id/imageView6"
        android:text="@string/about_update"
        android:textColor="#333333"
        android:textSize="@dimen/x16" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="@dimen/x25"
        android:layout_height="@dimen/x18"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x12"
        android:src="@drawable/frag4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView6"
        android:textColor="#22cd22"
        android:text="" />
</RelativeLayout>



<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#dedede"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:orientation="vertical" >
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/item_selector"
         android:id="@+id/r3"
        android:layout_height="@dimen/x55" 
        android:descendantFocusability="blocksDescendants"
        android:clickable="true"
        >
   

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/x35"
        android:layout_height="@dimen/x35"
        android:background="@drawable/csphone"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x20" />

        <com.growatt.shinephone.view.AutoFitTextView
        android:id="@+id/textView3"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/x40"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x22"
        android:layout_toRightOf="@+id/imageView3"
        android:text="@string/about_phone"
        android:textColor="#333333"
        android:textSize="@dimen/x16" />

        <com.growatt.shinephone.view.AutoFitTextView
        android:id="@+id/textView7"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x20"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/textView3"
            android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x10"
        android:textSize="@dimen/x14"
        android:text="" />

</RelativeLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#dedede"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:orientation="vertical" >
    </LinearLayout>
<RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/item_selector"
         android:id="@+id/r4"
        android:layout_height="@dimen/x55" >
   

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/x35"
        android:layout_height="@dimen/x35"
        android:background="@drawable/cache"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x20" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x22"
        android:layout_toRightOf="@+id/imageView4"
        android:text="@string/about_system"
        android:textColor="#333333"
        android:textSize="@dimen/x16" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x18"
        android:text="" />

</RelativeLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#dedede"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:orientation="vertical" >
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
