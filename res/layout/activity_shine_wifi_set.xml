<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_background"
    tools:context="com.growatt.shinephone.activity.ShineWifiSetActivity">
  <include
      android:id="@+id/headerView"
      layout="@layout/header_view"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/y195"
      android:layout_marginTop="@dimen/y5"
      android:background="@color/headerView_r50"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y25"
        android:layout_gravity="center"
        android:background="@color/headerView"
        android:orientation="horizontal">

      <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1" />

      <FrameLayout
          android:id="@+id/wifi_icon"
          android:layout_width="@dimen/x40"
          android:layout_height="match_parent">

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_gravity="center"
            android:src="@drawable/wifi_icon" />
      </FrameLayout>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_toRightOf="@+id/wifi_icon"
          android:gravity="center"
          android:text="@string/fragment4_shinewifi"
          android:textColor="@color/white1"
          android:textSize="@dimen/x13" />

      <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1" />
    </LinearLayout>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y28"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y5"
        android:visibility="gone"
        >
      <RadioButton
          android:id="@+id/radio_button1"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_marginLeft="@dimen/x10"
          android:layout_marginRight="@dimen/x10"
          android:button="@null"
          android:background="@drawable/selector_shinewifiset"
          android:textColor="@color/headerView"
          android:text="ShineWiFi"
          android:gravity="center"
          android:textSize="@dimen/x13"
          />
      <RadioButton
          android:id="@+id/radio_button2"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_marginLeft="@dimen/x10"
          android:layout_marginRight="@dimen/x10"
          android:button="@null"
          android:background="@drawable/selector_shinewifiset"
          android:textColor="@color/headerView"
          android:text="ShineWiFi-S"
          android:gravity="center"
          android:textSize="@dimen/x13"
          />
    </RadioGroup>
    <EditText
        android:id="@+id/et_sn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y25"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y10"
        android:background="@drawable/power_text_bg"
        android:gravity="center"
        android:hint="@string/ShineWifiSet_sn"
        android:paddingLeft="@dimen/x8"
        android:textColor="#ffffff"
        android:textColorHint="#78ffffff"
        android:textSize="@dimen/x13" />

    <Button
        android:id="@+id/btn_scan"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y30"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y15"
        android:background="@drawable/btn_selector_whitetored"
        android:textColor="@color/oss_selector_textcolor_device"
        android:text="@string/mipcaQRCode_title"
        android:textSize="@dimen/x13" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y30"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y15"
        android:background="@drawable/btn_selector_whitetored"
        android:textColor="@color/oss_selector_textcolor_device"
        android:text="@string/countryandcity_next"
        android:textSize="@dimen/x13" />
  </LinearLayout>
  <Button
      android:id="@+id/btn_newWifi2"
      android:layout_width="@dimen/x200"
      android:layout_height="@dimen/y30"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="@dimen/y15"
      android:background="@drawable/btn_selector"
      android:text="@string/countryandcity_next"
      android:textColor="#ffffff"
      android:textSize="@dimen/x13"
      android:visibility="gone"
      />
</LinearLayout>
