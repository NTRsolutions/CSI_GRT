<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="@dimen/y40"
        android:layout_height="@dimen/y40">
        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="@dimen/y30"
            android:layout_height="@dimen/y30"
            android:layout_gravity="center"
            android:src="@drawable/ossgd_user"
            />
    </FrameLayout>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_marginRight="@dimen/x10"
     >
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="@dimen/y20"
         >
    <com.growatt.shinephone.view.AutoFitTextView
        android:id="@+id/tvUserName"
        android:layout_width="0dp"
        android:layout_height="@dimen/y20"
        android:layout_weight="1"
        android:text=""
        android:gravity="center_vertical"
        android:textSize="@dimen/size_note"
        android:textColor="@color/content_bg_white"
        />
     <ImageView
         android:id="@+id/tvImage"
             android:layout_width="@dimen/x20"
             android:layout_height="wrap_content"
             android:gravity="center_vertical|right"
             android:textSize="@dimen/size_note"
             android:textColor="@color/note_bg_white"
         android:layout_gravity="center"
         android:src="@drawable/oss_pic_icon"
             />
     </LinearLayout>

     <com.growatt.shinephone.view.AutoFitTextView
         android:id="@+id/tvTime"
         android:layout_width="match_parent"
         android:layout_height="@dimen/y15"
         android:gravity="center_vertical"
         android:text=""
         android:textColor="@color/note_bg_white"
         android:textSize="@dimen/size_grid" />

     <TextView
         android:id="@+id/tvMessage"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center_vertical"
         android:textSize="@dimen/size_note"
         android:textColor="@color/content_bg_white"
         android:layout_marginBottom="@dimen/y5"
         android:layout_marginTop="@dimen/y5"
         />
 </LinearLayout>
</LinearLayout>