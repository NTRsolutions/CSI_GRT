<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_background"
    tools:context="com.growatt.shinephone.activity.AhToolActivity" >
    <include layout="@layout/header_view" android:id="@+id/headerView"/>
<TextView
    android:id="@+id/router_disptext"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=" "
    android:textColor="#777777"
    android:textSize="@dimen/x16" />

    <LinearLayout
           android:id="@+id/linearLayout2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/x10"
           android:gravity="center_horizontal"
           android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="@dimen/x40" >

              <TextView
                  android:id="@+id/routerssid_label"
                  android:layout_width="@dimen/x80"
                  android:layout_height="@dimen/x40"
                  android:gravity="center"
                  android:text="@string/ahtool_ssid"
                  android:textColor="#ffffff"
                  android:textSize="@dimen/x16" >

               </TextView>

               <EditText
                   android:id="@+id/routerssid_text"
                   android:layout_width="0dp"
                   android:layout_height="@dimen/x40"
                   android:layout_weight="1"
                   android:layout_marginRight="@dimen/x10"
                   android:background="@drawable/power_text_bg"
                   android:inputType="textPersonName"
                   android:paddingLeft="@dimen/x5"
                   android:textColor="#ffffff" >

               </EditText>

               <Button
                   android:id="@+id/router_button"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:background="@drawable/btn_selector_whitetored"
                   android:textColor="@color/oss_selector_textcolor_device"
                   android:paddingLeft="@dimen/x5"
                   android:paddingRight="@dimen/x5"
                   android:layout_marginRight="@dimen/x5"
                   android:text="@string/ahtool_selectrouter"
                   android:textSize="@dimen/x14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/x10"
            android:layout_height="@dimen/x40" >

            <TextView
                android:id="@+id/routerpwd_label"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x40"
                android:gravity="center"
                android:text="@string/ahtool_pwd"
                android:textColor="#ffffff"
                android:textSize="@dimen/x16" />

               <EditText
                   android:id="@+id/routerpwd_text"
                   android:layout_width="@dimen/x200"
                   android:layout_height="@dimen/x40"
                   android:layout_weight="10"
                   android:background="@drawable/power_text_bg"
                   android:ems="10"
                   android:textColor="#ffffff"
                   android:inputType="number"
                   android:paddingLeft="@dimen/x5"
                   android:singleLine="true" >

               </EditText>

               <CheckBox
                   android:id="@+id/routerpwd_checkbox"
                   android:layout_width="wrap_content"
                   android:layout_height="@dimen/x40"
                   android:layout_margin="@dimen/x5"
                   android:layout_marginLeft="@dimen/x5"
                   android:layout_weight="2"
                   android:enabled="true"
                   android:gravity="center_vertical"
                   android:lines="1"
                    />

        </LinearLayout>

       </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x2"
        android:visibility="invisible"
        android:layout_marginBottom="@dimen/x130"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <include layout="@layout/modify_wifi_pwd" />
    </LinearLayout>

    <Button
        android:id="@+id/setting_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@drawable/btn_selector_whitetored"
        android:textColor="@color/oss_selector_textcolor_device"
        android:text="@string/all_ok"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:textSize="@dimen/x16" />

    <TextView
        android:id="@+id/udp_disptext"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x40"
        android:gravity="center_vertical" />
</LinearLayout>
