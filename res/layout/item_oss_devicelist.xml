<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y60"
    android:orientation="vertical"
    android:background="@drawable/item_click_whitetogray"
    >
    <!--第一行标题行-->
    <com.growatt.shinephone.view.AutoFitTextView
        android:id="@+id/tvAlias"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/y5"
        android:layout_weight="1"
        android:gravity="center"
        android:text="123456789"
        android:paddingRight="@dimen/x10"
        android:paddingLeft="@dimen/x10"
        android:textColor="@color/headerView"
        android:textSize="@dimen/size_content_title" />
    <!--第二行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingRight="@dimen/x10"
        android:paddingLeft="@dimen/x10"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <com.growatt.shinephone.view.AutoFitTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="序列号"
                android:gravity="center_vertical"
                android:textSize="@dimen/size_note"
                android:textColor="@color/content_bg_white"
                />
            <TextView
                android:layout_width="@dimen/x3"
                android:layout_height="match_parent"
                android:text=":"
                android:gravity="center_vertical|right"
                android:textSize="@dimen/size_note"
                android:textColor="@color/content_bg_white"
                />
            <com.growatt.shinephone.view.AutoFitTextView
                android:id="@+id/tvSn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="123456789"
                android:gravity="center_vertical"
                android:textSize="@dimen/size_note"
                android:textColor="@color/content_bg_white"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <com.growatt.shinephone.view.AutoFitTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="设备类型"
                android:gravity="center_vertical"
                android:textSize="@dimen/size_note"
                android:textColor="@color/content_bg_white"
                android:layout_marginLeft="@dimen/x5"
                />
            <TextView
                android:layout_width="@dimen/x3"
                android:layout_height="match_parent"
                android:text=":"
                android:gravity="center_vertical|right"
                android:textSize="@dimen/size_note"
                android:textColor="@color/content_bg_white"
                />
            <com.growatt.shinephone.view.AutoFitTextView
                android:id="@+id/tvType"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="123456789"
                android:gravity="center_vertical"
                android:textSize="@dimen/size_note"
                android:textColor="@color/content_bg_white"
                />
        </LinearLayout>
    </LinearLayout>
    <!--第三行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/y5"
        android:paddingRight="@dimen/x10"
        android:paddingLeft="@dimen/x10"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <com.growatt.shinephone.view.AutoFitTextView
                android:id="@+id/tvDatalogTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="所属采集器"
                android:textColor="@color/content_bg_white"
                android:textSize="@dimen/size_note" />

            <TextView
                android:layout_width="@dimen/x3"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text=":"
                android:textColor="@color/content_bg_white"
                android:textSize="@dimen/size_note" />

            <com.growatt.shinephone.view.AutoFitTextView
                android:id="@+id/tvDatalogContent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="123456789"
                android:textColor="@color/content_bg_white"
                android:textSize="@dimen/size_note" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <com.growatt.shinephone.view.AutoFitTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x5"
                android:gravity="center_vertical"
                android:text="状态"
                android:textColor="@color/content_bg_white"
                android:textSize="@dimen/size_note" />

            <TextView
                android:layout_width="@dimen/x3"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text=":"
                android:textColor="@color/content_bg_white"
                android:textSize="@dimen/size_note" />

            <com.growatt.shinephone.view.AutoFitTextView
                android:id="@+id/tvLost"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="123456789"
                android:textColor="@color/content_bg_white"
                android:textSize="@dimen/size_note" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/title_bg_oss"
        />
</LinearLayout>
