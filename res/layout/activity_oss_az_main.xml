<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/gray_background"
              tools:context="com.growatt.shinephone.ossactivity.OssAZMainActivity">
    <include layout="@layout/header_view" android:id="@+id/headerView"/>
    <!--第一行-->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        android:paddingBottom="@dimen/y6"
        android:paddingTop="@dimen/y6"
        >
        <RadioButton
            android:id="@+id/radioGroup_rb1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x15"
            android:background="@drawable/oss_jk_selector_bg_device"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="@string/all_interver"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:textColor="@color/oss_jk_selector_textcolor_device"
            android:textSize="@dimen/size_content" />
        <RadioButton
            android:id="@+id/radioGroup_rb2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:background="@drawable/oss_jk_selector_bg_device"
            android:button="@null"
            android:gravity="center"
            android:text="@string/all_storage"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:textColor="@color/oss_jk_selector_textcolor_device"
            android:textSize="@dimen/size_content" />
    </RadioGroup>
    <!--第二行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:orientation="vertical"
        android:background="@color/white_background"
        >
        <!--21-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <LinearLayout
                android:id="@+id/ll_AccessStatus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                >
                <com.growatt.shinephone.view.AutoFitTextView
                    android:id="@+id/tvAccessStatus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="已接入设备"
                    android:gravity="center"
                    android:textSize="@dimen/size_content"
                    android:textColor="@color/content_bg_white"
                    />
                <ImageView
                    android:layout_width="@dimen/x6"
                    android:layout_height="match_parent"
                    android:src="@drawable/oss_up"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_agent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                >

                <com.growatt.shinephone.view.AutoFitTextView
                    android:id="@+id/tvPlantList"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="所有电站"
                    android:textColor="@color/content_bg_white"
                    android:textSize="@dimen/size_content"
                    />

                <ImageView
                    android:layout_width="@dimen/x6"
                    android:layout_height="match_parent"
                    android:src="@drawable/oss_up"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/hint_bg_white"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/hint_bg_white"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                />
        </LinearLayout>
        <!--22-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/etAgentCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColorHint="@color/hint_bg_white"
                android:gravity="center"
                android:textSize="@dimen/size_content"
                android:textColor="@color/content_bg_white"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                android:background="@null"
                android:enabled="false"
                />
            <EditText
                android:id="@+id/etUserName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/register_xml_username"
                android:textColorHint="@color/hint_bg_white"
                android:gravity="center"
                android:textSize="@dimen/size_content"
                android:textColor="@color/content_bg_white"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                android:background="@null"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grid_bg_white"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grid_bg_white"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                />
        </LinearLayout>
        <!--23-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/etDeviceSN"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/dataloggers_list_serial"
                android:textColorHint="@color/hint_bg_white"
                android:gravity="center"
                android:textSize="@dimen/size_content"
                android:textColor="@color/content_bg_white"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                android:background="@null"
                />

            <EditText
                android:id="@+id/etDatalogSN"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:hint="采集器"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                android:textColor="@color/content_bg_white"
                android:textColorHint="@color/hint_bg_white"
                android:textSize="@dimen/size_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grid_bg_white"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grid_bg_white"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            >
            <com.growatt.shinephone.view.AutoFitTextView
                android:id="@+id/tvSearch"
                android:layout_width="@dimen/x140"
                android:layout_height="@dimen/y18"
                android:layout_gravity="center"
                android:text="@string/SearchAct_title"
                android:gravity="center"
                android:textSize="@dimen/size_content"
                android:textColor="@color/oss_jk_selector_textcolor_device"
                android:background="@drawable/oss_jk_selector_bg_device"
                />
        </FrameLayout>
    </LinearLayout>
    <!--第三行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="查询结果"
            android:gravity="center"
            android:textSize="@dimen/size_content"
            android:textColor="@color/content_bg_white"
            />
    </LinearLayout>
    <!--第四行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white_background"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        >
        <!--41-->
        <LinearLayout
            android:id="@+id/ll_total"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tvAccessTypeTxt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="已接入设备"
                android:textColor="@color/title_bg_white"
                android:textSize="@dimen/size_18" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="总数:"
                android:textColor="@color/title_bg_white"
                android:textSize="@dimen/size_18" />
            <TextView
                android:id="@+id/tvTotalNum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:maxWidth="@dimen/x200"
                android:textColor="@color/title_bg_white"
                android:gravity="center"
                android:textSize="@dimen/size_18"
                android:paddingLeft="@dimen/x5"
                />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/item_oss_jkmain_inv" android:id="@+id/invLayout"/>
            <include layout="@layout/item_oss_jkmain_storage" android:id="@+id/storageLayout" android:visibility="invisible"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
