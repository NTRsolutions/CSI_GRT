<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_background"
    tools:context="com.growatt.shinephone.ossactivity.OssUserInfoEditActivity">
    <include layout="@layout/header_view" android:id="@+id/headerView"/>
    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:layout_marginTop="@dimen/y20"
        android:gravity="center"
        android:textSize="@dimen/size_content_title"
        android:textColor="@color/content_bg_blue"
        />
    <EditText
        android:id="@+id/etValue"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y20"
        android:layout_marginTop="@dimen/y5"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/size_content"
        android:textColor="@color/content_bg_blue"
        android:background="@drawable/edittext_bg_blue"
        />
    <Button
        android:id="@+id/btnOk"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/y25"
        android:layout_marginTop="@dimen/y15"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_selector"
        android:text="@string/all_ok"
        android:textColor="#ffffff"
        android:textSize="@dimen/x17" />
</LinearLayout>
