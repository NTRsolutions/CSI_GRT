<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_background"
    android:orientation="vertical"
    tools:context=".UserActivity" >
    <include layout="@layout/header_view" android:id="@+id/headerView"/>

<RelativeLayout
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x50"
    android:background="@drawable/item_selector_user"
    >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x10"
        android:textSize="@dimen/x16"
        android:textColor="@color/white1"
        android:text="@string/userdata_changepwd" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x22"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/whiteback" />

</RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/x10"
    android:layout_marginRight="@dimen/x10"
    android:background="@color/white_30"
    android:layout_height="0.5dp" >
</View>
<RelativeLayout
    android:id="@+id/relative1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x50"
    android:background="@drawable/item_selector_user"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x10"
        android:textSize="@dimen/x16"
        android:textColor="@color/white1"
        android:text="@string/userdata_change_agent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x22"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/whiteback" />



</RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:background="@color/white_30"
        android:layout_height="0.5dp" >
    </View>
<ListView
    android:id="@+id/listView1"
    android:divider="@color/white_30"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x100"
    android:dividerHeight="0dp"
    >
</ListView>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:background="@color/white_30"
        android:layout_height="0.5dp" >
    </View>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/finish"
        android:layout_width="@dimen/x250"
        android:layout_height="@dimen/x38"
        android:background="@drawable/btn_selector_whitetored"
        android:textColor="@color/oss_selector_textcolor_device"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="@string/fragment4_logout"
        android:textSize="@dimen/x14"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginBottom="@dimen/x30"
        />

</RelativeLayout>

</LinearLayout>
