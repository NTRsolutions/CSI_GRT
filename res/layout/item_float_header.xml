<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/r4"
        android:layout_width="match_parent"
        android:background="@drawable/floting_bg"
        android:layout_height="@dimen/x100"
        android:orientation="vertical"
        android:paddingBottom="@dimen/x10"
        >
        <!-- 第一排 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:text="@string/fragment1_power"
                android:textSize="@dimen/x16"
                android:paddingBottom="@dimen/x4"
                android:gravity="bottom|center_horizontal"
                />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:text="@string/fragment1_plantMoney"
                android:textSize="@dimen/x16"
                android:paddingBottom="@dimen/x4"
                android:gravity="bottom|center_horizontal"
                />
            <TextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:text="@string/fragment1_Puser"
                android:textSize="@dimen/x16"
                android:paddingBottom="@dimen/x4"
                android:gravity="bottom|center_horizontal"
                />
        </LinearLayout>
        <!-- 第二排 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:orientation="horizontal"
            >
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <View
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x2"
                    android:background="#11b7f3"
                    android:layout_gravity="center_horizontal"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <View
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x2"
                    android:background="#dbd24a"
                    android:layout_gravity="center_horizontal"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <View
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x2"
                    android:background="#53de7e"
                    android:layout_gravity="center_horizontal"
                    />
            </FrameLayout>
        </LinearLayout>
        <!-- 第三排-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            >
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="#ffffff"
                    android:text="0"
                    android:textSize="@dimen/x24"
                    android:gravity="center|bottom"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_marginRight="@dimen/x5"
                    />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="#ffffff"
                    android:text="0"
                    android:textSize="@dimen/x24"
                    android:gravity="center|bottom"
                    />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="#ffffff"
                    android:text="0"
                    android:textSize="@dimen/x24"
                    android:gravity="center|bottom"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_marginRight="@dimen/x5"
                    />

        </LinearLayout>
<!--第四排-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:text="kW"
                android:textSize="@dimen/x13"
                android:gravity="center|bottom"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:text=""
                android:textSize="@dimen/x13"
                android:gravity="center|bottom"
                />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:text="kWh"
                android:textSize="@dimen/x13"
                android:gravity="center|bottom"
                />
    </LinearLayout>

    </LinearLayout>
