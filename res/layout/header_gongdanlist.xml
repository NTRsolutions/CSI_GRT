<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--2行：客服状态-->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y25"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/y4"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        android:paddingTop="@dimen/y4">

        <RadioButton
            android:id="@+id/radioGroup_rb0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:text="全部问题"
            android:background="@drawable/oss_selector_bg_device"
            android:textColor="@color/oss_selector_textcolor_device"
            android:textSize="@dimen/size_grid" />

        <RadioButton
            android:id="@+id/radioGroup_rb1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x5"
            android:layout_weight="1"
            android:background="@drawable/oss_selector_bg_device"
            android:button="@null"
            android:maxLines="1"
            android:gravity="center"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:text="@string/正在处理"
            android:textColor="@color/oss_selector_textcolor_device"
            android:textSize="@dimen/size_grid" />

        <RadioButton
            android:id="@+id/radioGroup_rb2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:layout_weight="1"
            android:background="@drawable/oss_selector_bg_device"
            android:button="@null"
            android:gravity="center"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:text="@string/m76待跟进"
            android:textColor="@color/oss_selector_textcolor_device"
            android:textSize="@dimen/size_grid" />

        <RadioButton
            android:id="@+id/radioGroup_rb3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x5"
            android:layout_weight="1"
            android:background="@drawable/oss_selector_bg_device"
            android:button="@null"
            android:maxLines="1"
            android:gravity="center"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:text="@string/未处理"
            android:textColor="@color/oss_selector_textcolor_device"
            android:textSize="@dimen/size_grid" />

        <RadioButton
            android:id="@+id/radioGroup_rb4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/oss_selector_bg_device"
            android:button="@null"
            android:maxLines="1"
            android:gravity="center"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:text="@string/m75已处理"
            android:textColor="@color/oss_selector_textcolor_device"
            android:textSize="@dimen/size_grid" />
    </RadioGroup>
    <!--2行：客服状态-->
    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y25"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/y4"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        android:paddingTop="@dimen/y4"
        >
        <RadioButton
            android:id="@+id/radioGroup3_rb0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/oss_selector_bg_device"
            android:textColor="@color/oss_selector_textcolor_device"
            android:button="@null"
            android:gravity="center"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:text="全部工单"
            android:textSize="@dimen/size_grid" />
        <RadioButton
            android:id="@+id/radioGroup3_rb1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/oss_selector_bg_device"
            android:textColor="@color/oss_selector_textcolor_device"
            android:button="@null"
            android:gravity="center"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:text="待接收"
            android:textSize="@dimen/size_grid" />

        <RadioButton
            android:id="@+id/radioGroup3_rb2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/oss_selector_bg_device"
            android:textColor="@color/oss_selector_textcolor_device"
            android:button="@null"
            android:gravity="center"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:text="服务中"
            android:textSize="@dimen/size_grid" />

        <RadioButton
            android:id="@+id/radioGroup3_rb3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/oss_selector_bg_device"
            android:textColor="@color/oss_selector_textcolor_device"
            android:button="@null"
            android:gravity="center"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:text="已完成"
            android:textSize="@dimen/size_grid" />
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y25"
        android:background="@color/white_background"
        android:orientation="horizontal"
        >
        <com.growatt.shinephone.view.AutoFitTextView
            android:id="@+id/tvHeaderText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="全部"
            android:gravity="center_vertical"
            android:textSize="@dimen/size_grid"
            android:textColor="@color/content_bg_white"
            android:layout_marginLeft="@dimen/x10"
            />
        <com.growatt.shinephone.view.AutoFitTextView
            android:id="@+id/tvCount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text=""
            android:gravity="center_vertical|right"
            android:textSize="@dimen/size_grid"
            android:textColor="@color/content_bg_white"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x10"
            />
    </LinearLayout>
</LinearLayout>