<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reback_pwd_by_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context="com.growatt.shinephone.activity.RebackPwdByPhoneActivity">
    <include
    android:id="@+id/headerView"
    layout="@layout/header_view"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x60"
        android:layout_marginLeft="@dimen/x25"
        android:layout_marginRight="@dimen/x25"
        >
       <EditText
           android:id="@+id/etAreaCode"
           android:layout_width="@dimen/x65"
           android:layout_height="match_parent"
           android:hint="@string/m42"
           android:textSize="@dimen/x16"
           android:textColorHint="@color/halfwhite"
           android:background="#00000000"
           android:gravity="center"
           android:textColor="#ffffff"
           android:inputType="phone"
           />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#78ffffff"
            android:layout_marginTop="@dimen/x5"
            android:layout_marginBottom="@dimen/x5"
            />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:textColorHint="@color/halfwhite"
            android:hint="@string/m26"
            android:inputType="phone"
            android:textColor="#ffffff"
            android:textSize="@dimen/x16" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x25"
        android:layout_marginRight="@dimen/x25"
        android:background="#78ffffff" >
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginLeft="@dimen/x25"
        android:layout_marginRight="@dimen/x25"
        >
    <EditText
        android:id="@+id/etVCode"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="@dimen/x16"
        android:background="#00000000"
        android:gravity="center"
        android:textColorHint="@color/halfwhite"
        android:inputType="number"
        android:hint="@string/m21"
        android:textColor="#ffffff"
        />

        <Button
            android:id="@+id/btnSendCode"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x35"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_square_selector_green"
            android:padding="@dimen/x4"
            android:text="@string/m23"
            android:textColor="#ffffff"
            android:textSize="@dimen/x9" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/x25"
        android:layout_marginRight="@dimen/x25"
        android:background="#78ffffff" >
    </View>
    <Button
        android:id="@+id/btnOk"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/x40"
        android:layout_marginTop="@dimen/x60"
        android:background="@drawable/btn_selector_whitetored"
        android:textColor="@color/oss_selector_textcolor_device"
        android:layout_gravity="center_horizontal"
        android:text="@string/all_ok"
        android:textSize="@dimen/x17" />
</LinearLayout>
