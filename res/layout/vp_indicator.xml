<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4ebec"
    android:orientation="vertical" >
    <include 
        layout="@layout/header_view_title"
        android:id="@+id/headerView"
        />
    <FrameLayout 
       android:layout_width="match_parent"
        android:layout_height="@dimen/x35" 
        android:background="#ffffff"
        >
 
    <TextView
            android:id="@+id/search"
            android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/research_click"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x2"
        android:text="@string/SearchAct_title"
            android:gravity="center"
            android:lines="1"
            android:paddingLeft="@dimen/x4"
            android:textColor="#000000"
            android:textSize="@dimen/x14" />
    </FrameLayout>    "
    <com.growatt.shinephone.video.ViewPagerIndicator
        android:id="@+id/id_indicator"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="#ffffffff"
        />
       <!--  zhy:item_count="4"  -->

    <android.support.v4.view.ViewPager
        android:id="@+id/id_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/x5"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

</LinearLayout>