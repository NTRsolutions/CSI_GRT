<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mobile_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_background"
    android:orientation="vertical"
    tools:context="com.growatt.shinephone.activity.MobileRegisterActivity">

    <include
        android:id="@+id/headerView"
        layout="@layout/header_view"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y40"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="@dimen/x10"
            android:layout_height="match_parent"
            android:text="*"
            android:gravity="bottom|center_horizontal"
            android:textColor="@color/white1"
            />
        <EditText
            android:layout_width="@dimen/x220"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:gravity="center"
            android:textColor="#ffffff"
            android:inputType="phone"
            android:textColorHint="@color/halfwhite"
            android:hint="@string/m26"
            android:id="@+id/etPhone"
            android:drawableBottom="@drawable/line_horizontal_white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="@dimen/x10"
            android:layout_height="match_parent"
            android:text="*"
            android:gravity="bottom|center_horizontal"
            android:textColor="@color/white1"
            />
        <EditText
            android:layout_width="@dimen/x220"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:textColor="#ffffff"
            android:hint="@string/Login_password_hint"
            android:textColorHint="@color/halfwhite"
            android:id="@+id/etPwd"
            android:layout_gravity="center_horizontal"
            android:drawableBottom="@drawable/line_horizontal_white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="@dimen/x10"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            android:textColor="@color/white1"
            />
        <EditText
            android:layout_width="@dimen/x220"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:textColor="#ffffff"
            android:hint="@string/userdata_message"
            android:textColorHint="@color/halfwhite"
            android:id="@+id/etAgent"
            android:layout_gravity="center_horizontal"
            android:drawableBottom="@drawable/line_horizontal_white"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60" >
        <TextView
            android:id="@+id/textView4"
            android:layout_width="@dimen/x170"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/x16"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="@string/all_terms"/>

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/textView4"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:scaleY="0.8"
            android:scaleX="0.8"
            android:checked="true"
            android:button="@drawable/checkbox"
            android:textSize="@dimen/x12" />
    </RelativeLayout>
    <Button
        android:id="@+id/btnRegister"
        android:layout_height="@dimen/x40"
        android:layout_width="@dimen/x230"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/btn_selector_whitetored"
        android:textColor="@color/oss_selector_textcolor_device"
        android:text="@string/all_register"
        android:textSize="@dimen/x17" />
</LinearLayout>
