<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    android:orientation="vertical"
    tools:context=".ProductsdataActivity" >
    <include layout="@layout/header_view" android:id="@+id/headerView"/>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x5"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x220" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="@dimen/x160"
                    android:layout_height="@dimen/x160"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:gravity="center"
        android:text="集中型逆变器"
        android:textSize="@dimen/x18" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:background="#78aaaaaa" >
    </RelativeLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:text="TextView" 
        android:textIsSelectable="true"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:background="#78aaaaaa" >
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x3" >

        <RadioButton
            android:id="@+id/radio_button1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:text="@string/maintenancedata_summary"
            android:textColor="@color/text_main_tab_selector"
            android:textSize="@dimen/x16" />

        <RadioButton
            android:id="@+id/radio_button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:text="@string/all_information"
            android:textColor="@color/text_main_tab_selector"
            android:textSize="@dimen/x16" />
    </RadioGroup>

    <ImageView
        android:id="@+id/imageView2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x320"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textIsSelectable="true"
         />
    </LinearLayout>
    </ScrollView>
</LinearLayout>