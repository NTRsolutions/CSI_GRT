<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/x5">
    
	<LinearLayout
  	    android:id="@+id/routerdisp_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"		    
	    android:gravity="center_vertical">
	
		<CheckBox
		    android:id="@+id/wifi_modify_disptext"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#666666" >

		</CheckBox>
	</LinearLayout>

	<TableLayout
	    android:id="@+id/wifi_modify_ly"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:visibility="gone"
	    android:layout_marginTop="@dimen/x5">
		<TableRow			    
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="@dimen/x5"
		    android:visibility="gone">
		    <TextView
		        android:id="@+id/routerssid_label"
		        android:layout_width="wrap_content"
		        android:layout_height="@dimen/x40"
		        android:layout_weight="1"
		        android:layout_gravity="center_vertical"
		        android:gravity="center_vertical"
		        android:text="SSID"
		        >
			</TextView>

		    <EditText
		        android:id="@+id/routerssid_text"
		        android:layout_width="wrap_content"
		        android:layout_height="@dimen/x40"
			    android:layout_weight="10"
			    android:layout_gravity="center_vertical"
		        android:gravity="center_vertical"
			    android:ellipsize="middle"
		        >
		    </EditText>

			<Button
			    android:id="@+id/router_button"
			    android:layout_marginLeft="@dimen/x5"
			    android:layout_width="wrap_content"
		        android:layout_height="@dimen/x40"
			    android:layout_weight="2"
			    android:layout_gravity="center_vertical"
		        android:gravity="center_vertical"
			    >
			</Button>
		</TableRow>

		<TableRow 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="0dp">
		    <TextView
		        android:id="@+id/wifipwd_label"
		        android:layout_weight="1"
		        android:layout_width="wrap_content"
		        android:layout_height="@dimen/x40"
		        android:layout_gravity="center_vertical"
		        android:gravity="center_vertical"
		       >
			</TextView>
		        
		    <EditText
		        android:id="@+id/wifipwd_text"
		        android:layout_width="wrap_content"
		        android:layout_height="@dimen/x40"
			    android:layout_weight="10"
			    android:enabled="false"
           		android:singleLine="true"
			    android:layout_gravity="center_vertical"
			    android:gravity="center_vertical"
		        >
		    </EditText>
		        
		    <CheckBox
		        android:id="@+id/wifipwd_checkbox"
		       	android:layout_width="wrap_content"
		        android:layout_height="@dimen/x40"
		        android:layout_marginLeft="@dimen/x5"
			    android:enabled="false"
			    android:layout_weight="2"
			    android:layout_gravity="center_vertical"
			    android:gravity="center_vertical"
			   >
			</CheckBox>    
		</TableRow>
	</TableLayout>
</LinearLayout>
