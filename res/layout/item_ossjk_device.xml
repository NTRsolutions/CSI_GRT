<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y80"
    android:padding="@dimen/x5"
    android:background="@drawable/ossjk_device_list_bg"
    >
    <com.growatt.shinephone.view.AutoFitTextView
        android:id="@+id/tvAliasTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y18"
        android:text=""
        android:gravity="center"
        android:textSize="@dimen/size_14"
        android:textColor="@color/title_bg_white"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginRight="@dimen/x5"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <!--左边-->
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:layout_marginLeft="@dimen/x5"
           android:layout_marginRight="@dimen/x5"
           android:orientation="vertical"
           >
          <com.growatt.shinephone.view.AutoFitTextView
           android:layout_width="match_parent"
           android:layout_height="@dimen/y13"
           android:text="所属用户"
           android:gravity="center|bottom"
           android:textSize="@dimen/size_13"
           android:textColor="@color/headerView_text"
           />
           <com.growatt.shinephone.view.AutoFitTextView
               android:id="@+id/tvUserName"
               android:layout_width="match_parent"
               android:layout_height="@dimen/y13"
               android:text=""
               android:gravity="center"
               android:textSize="@dimen/size_13"
               android:textColor="@color/note_bg_white"
               />
           <com.growatt.shinephone.view.AutoFitTextView
               android:layout_width="match_parent"
               android:layout_height="@dimen/y13"
               android:text="所属采集器"
               android:gravity="center|bottom"
               android:textSize="@dimen/size_13"
               android:textColor="@color/headerView_text"
               />
           <com.growatt.shinephone.view.AutoFitTextView
               android:id="@+id/tvDatalogSn"
               android:layout_width="match_parent"
               android:layout_height="@dimen/y13"
               android:text=""
               android:gravity="center"
               android:textSize="@dimen/size_13"
               android:textColor="@color/note_bg_white"
               />
       </LinearLayout>
        <!--右边-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:orientation="vertical"
            >
            <com.growatt.shinephone.view.AutoFitTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y13"
                android:text="所属电站"
                android:gravity="center|bottom"
                android:textSize="@dimen/size_13"
                android:textColor="@color/headerView_text"
                />
            <com.growatt.shinephone.view.AutoFitTextView
                android:id="@+id/tvPlant"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y13"
                android:text=""
                android:gravity="center"
                android:textSize="@dimen/size_13"
                android:textColor="@color/note_bg_white"
                />
            <com.growatt.shinephone.view.AutoFitTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y13"
                android:text="状态"
                android:gravity="center|bottom"
                android:textSize="@dimen/size_13"
                android:textColor="@color/headerView_text"
                />
            <com.growatt.shinephone.view.AutoFitTextView
                android:id="@+id/tvLost"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y13"
                android:text=""
                android:gravity="center"
                android:textSize="@dimen/size_13"
                android:textColor="@color/note_bg_white"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>