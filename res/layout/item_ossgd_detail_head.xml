<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y80"
    android:layout_marginLeft="@dimen/x10"
    android:layout_marginRight="@dimen/x10"
    >
    <!--第一行开始-->
     <com.growatt.shinephone.view.AutoFitTextView
         android:id="@+id/tvWorkTitle"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:text=""
         android:gravity="center_vertical"
         android:textSize="@dimen/size_head_title"
         android:textColor="@color/title_bg_white"
         />
    <!--第一行结束-->
    <!--第二行开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="@dimen/x15"
            android:layout_height="match_parent"
            android:src="@drawable/ossgd_workorder_message_icon"
            />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x5"
            android:gravity="center_vertical"
            android:text="客户基本信息"
            android:textColor="@color/content_bg_white"
            android:textSize="@dimen/size_content" />
    </LinearLayout>
    <!--第二行结束-->
    <!--第3行开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x5"
            android:gravity="center_vertical"
            android:text="客户名称"
            android:textColor="@color/content_bg_white"
            android:textSize="@dimen/size_note" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text=":"
            android:textColor="@color/content_bg_white"
            android:textSize="@dimen/size_note" />
        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:minWidth="@dimen/x40"
            android:maxWidth="@dimen/x80"
            android:gravity="center_vertical"
            android:textSize="@dimen/size_note"
            android:textColor="@color/content_bg_white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x20"
            android:gravity="center_vertical"
            android:text="类型"
            android:textColor="@color/content_bg_white"
            android:textSize="@dimen/size_note" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text=":"
            android:textColor="@color/content_bg_white"
            android:textSize="@dimen/size_note" />
        <TextView
            android:id="@+id/tvServiceType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center_vertical"
            android:textSize="@dimen/size_note"
            android:textColor="@color/content_bg_white"
            />
    </LinearLayout>
    <!--第3行结束-->
    <!--第4行开始-->
    <LinearLayout
        android:id="@+id/llCallPhone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x5"
            android:gravity="center_vertical"
            android:text="@string/maintenancedata_phone"
            android:textColor="@color/content_bg_white"
            android:textSize="@dimen/size_note" />
        <TextView
            android:id="@+id/tvContact"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="@dimen/x200"
            android:text=""
            android:gravity="center_vertical"
            android:textSize="@dimen/size_note"
            android:textColor="@color/content_bg_white"
            />
        <ImageView
            android:layout_width="@dimen/x15"
            android:layout_height="match_parent"
            android:src="@drawable/oss_phone"
            android:layout_marginLeft="@dimen/x5"
            />
    </LinearLayout>
    <!--第4行结束-->

</LinearLayout>