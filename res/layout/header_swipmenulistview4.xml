<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/r4"
        android:layout_width="match_parent"
        android:background="@drawable/bg_storage_gradient_3"
        android:layout_height="@dimen/x200"
        android:orientation="vertical"
        >
        <!-- 第一排 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:orientation="horizontal"
            >

            <com.growatt.shinephone.view.AutoFitTextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="4dp"
                android:text="@string/重复35"
                android:textColor="#ffffff"
                android:textSize="@dimen/x14" />

            <com.growatt.shinephone.view.AutoFitTextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:text="@string/photovoltaic_generatingcapacity"
                android:textSize="@dimen/x14"
                android:paddingBottom="4dp"
                android:gravity="bottom|center_horizontal"
                />
            <com.growatt.shinephone.view.AutoFitTextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:text="@string/fragment1_plantMoney"
                android:textSize="@dimen/x14"
                android:paddingBottom="4dp"
                android:gravity="bottom|center_horizontal"
                />
        </LinearLayout>
        <!-- 第二排 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:orientation="horizontal"
            >
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <View
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x2"
                    android:layout_gravity="center_horizontal"
                    android:background="#7ff7ff"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <View
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x2"
                    android:background="#6ffd94"
                    android:layout_gravity="center_horizontal"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <View
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x2"
                    android:background="#fff558"
                    android:layout_gravity="center_horizontal"
                    />
            </FrameLayout>
        </LinearLayout>
        <!--第四排-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/x8"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/white_70"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/m180当前功率"
                android:textSize="@dimen/x12"
                android:gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/white_70"
                android:text="@string/m182今日收益"
                android:textSize="@dimen/x12"
                android:gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/white_70"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/m182今日收益"
                android:textSize="@dimen/x12"
                android:gravity="center"
                />
        </LinearLayout>
        <!-- 第三排-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/x15"
            >


                <com.growatt.shinephone.view.AutoFitTextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:gravity="center|bottom"
                    android:lines="1"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/x16" />

            <com.growatt.shinephone.view.AutoFitTextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:text="0"
                android:textColor="#ffffff"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="@dimen/x16" />

            <com.growatt.shinephone.view.AutoFitTextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:text="0"
                android:textSize="@dimen/x16"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center|bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
        </LinearLayout>
        <!--第四排-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/white_70"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/m181装机容量"
                android:textSize="@dimen/x12"
                android:gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/white_70"
                android:text="@string/m183累计收益"
                android:textSize="@dimen/x12"
                android:gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/white_70"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/m183累计收益"
                android:textSize="@dimen/x12"
                android:gravity="center"
                />
        </LinearLayout>
        <!-- 第三排-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.growatt.shinephone.view.AutoFitTextView
                android:id="@+id/tvTotalPower"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="0"
                android:textSize="@dimen/x16"
                android:gravity="center|bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:lines="1"
                android:ellipsize="end"
                />

            <com.growatt.shinephone.view.AutoFitTextView
                android:id="@+id/tvTotalEnergy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:text="0"
                android:textColor="#ffffff"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="@dimen/x16" />

            <com.growatt.shinephone.view.AutoFitTextView
                android:id="@+id/tvTotalRevenue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="0"
                android:textSize="@dimen/x16"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center|bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
        </LinearLayout>

        <!--第五排  -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            >
            <LinearLayout
                android:id="@+id/ll_Circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="invisible"
                >
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    >
                    <View
                        android:id="@+id/circle1"
                        android:layout_width="@dimen/x60"
                        android:layout_height="@dimen/x60"
                        android:layout_gravity="center"
                        android:background="@drawable/list_circle_frg1"
                        />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <View
                        android:id="@+id/circle2"
                        android:layout_width="@dimen/x60"
                        android:layout_height="@dimen/x60"
                        android:layout_gravity="center"
                        android:background="@drawable/list_circle_frg1"
                        />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <View
                        android:id="@+id/circle3"
                        android:layout_width="@dimen/x60"
                        android:layout_height="@dimen/x60"
                        android:layout_gravity="center"
                        android:background="@drawable/list_circle_frg1"
                        />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_Image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:id="@+id/ivRotate1"
                        android:layout_width="@dimen/x40"
                        android:layout_height="@dimen/x40"
                        android:layout_gravity="center"
                        android:src="@drawable/energy_power"
                        />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:id="@+id/ivRotate2"
                        android:layout_width="@dimen/x40"
                        android:layout_height="@dimen/x40"
                        android:layout_gravity="center"
                        android:src="@drawable/energy_energy"
                        />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:id="@+id/ivRotate3"
                        android:layout_width="@dimen/x40"
                        android:layout_height="@dimen/x40"
                        android:layout_gravity="center"
                        android:src="@drawable/energy_capital"
                        />
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llMyDeviceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:background="@color/gray_background"
        android:text="@string/我的设备"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x15"
        android:textColor="@color/title_bg_white"
        android:textSize="@dimen/size_content_title"
        />
    <View
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#ededed"/>
    </LinearLayout>
</LinearLayout>
