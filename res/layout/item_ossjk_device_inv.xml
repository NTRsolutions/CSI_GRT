<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y60"
    android:orientation="vertical"
    android:background="@drawable/item_click_whitetogray"
    >
    <!--第一行标题行-->
    <com.growatt.shinephone.view.AutoFitTextView
        android:id="@+id/tvAliasTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/y5"
        android:layout_weight="1"
        android:text=""
        android:gravity="center"
        android:textSize="@dimen/size_content_title"
        android:textColor="@color/title_bg_white"
        android:paddingRight="@dimen/x10"
        android:paddingLeft="@dimen/x10"
        />
    <!--第二行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingRight="@dimen/x10"
        android:paddingLeft="@dimen/x10"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <com.growatt.shinephone.view.AutoFitTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="所属用户"
                android:gravity="center_vertical"
                android:textSize="@dimen/size_note"
                android:textColor="@color/content_bg_white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=":"
                android:gravity="center_vertical"
                android:textSize="@dimen/size_note"
                android:textColor="@color/content_bg_white"
                />

            <com.growatt.shinephone.view.AutoFitTextView
                android:id="@+id/tvUserName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/content_bg_white"
                android:textSize="@dimen/size_note" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/x5"
            >
            <com.growatt.shinephone.view.AutoFitTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="所属电站"
                android:gravity="center_vertical"
                android:textSize="@dimen/size_note"
                android:textColor="@color/content_bg_white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=":"
                android:gravity="center_vertical"
                android:textSize="@dimen/size_note"
                android:textColor="@color/content_bg_white"
                />
            <com.growatt.shinephone.view.AutoFitTextView
                android:id="@+id/tvPlant"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:gravity="center_vertical"
                android:textSize="@dimen/size_note"
                android:textColor="@color/content_bg_white"
                />
        </LinearLayout>
    </LinearLayout>
    <!--第三行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingRight="@dimen/x10"
        android:paddingLeft="@dimen/x10"
        android:layout_marginBottom="@dimen/y5"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <com.growatt.shinephone.view.AutoFitTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="所属代理商"
                android:textColor="@color/content_bg_white"
                android:textSize="@dimen/size_note" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=":"
                android:textColor="@color/content_bg_white"
                android:textSize="@dimen/size_note" />

            <com.growatt.shinephone.view.AutoFitTextView
                android:id="@+id/tvAgent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/content_bg_white"
                android:textSize="@dimen/size_note" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/x5"
            android:orientation="horizontal"
            >
            <com.growatt.shinephone.view.AutoFitTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="状态"
                android:textColor="@color/content_bg_white"
                android:textSize="@dimen/size_note" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=":"
                android:textColor="@color/content_bg_white"
                android:textSize="@dimen/size_note" />

            <TextView
                android:id="@+id/tvLost"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/content_bg_white"
                android:textSize="@dimen/size_note" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_background"
        />
</LinearLayout>
