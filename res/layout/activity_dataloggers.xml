<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    tools:context=".activity.DataloggersActivity" >
    <include layout="@layout/header_view_title" android:id="@+id/headerView"/>

<!-- 添加emptyview -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_below="@+id/headerView"
    >
<ListView
    android:id="@+id/listView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:divider="#ffffff"
    android:dividerHeight="@dimen/x10"
    >
</ListView>
<ImageView 
    android:id="@+id/emptyView"
    android:layout_width="@dimen/x256"
    android:layout_height="@dimen/x320"
    android:layout_centerInParent="true"
    />
</RelativeLayout>
    <ImageView
        android:id="@+id/ivGuide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:visibility="gone"
        />
</RelativeLayout>
