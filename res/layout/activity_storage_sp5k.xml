<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_background"
    tools:context=".activity.StorageSp5kActivity" >
    <include layout="@layout/header_view" android:id="@+id/headerView"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x170"
        android:background="@drawable/bg_storage_gradient_3"
        android:paddingBottom="@dimen/x15">
        <RelativeLayout
            android:layout_width="@dimen/x110"
            android:layout_height="@dimen/x110"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x10"
            android:background="@drawable/shape" />

        <com.growatt.shinephone.ui.WaveView
            android:id="@+id/waveview"
            android:layout_width="@dimen/x110"
            android:layout_height="@dimen/x110"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x10"
            />
        <com.growatt.shinephone.view.AutoFitTextView
            android:id="@+id/textView7"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/x25"
            android:textSize="@dimen/x21"
            android:textColor="#ffffff"
            android:lines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_alignTop="@+id/waveview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x25"
            android:text="0%"
            />

        <com.growatt.shinephone.view.AutoFitTextView
            android:id="@+id/textView10"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/x20"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text=" "
            android:textColor="#ffffff"
            android:textSize="@dimen/x12" />
        <com.growatt.shinephone.view.AutoFitTextView
            android:id="@+id/textView9"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x20"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView10"
            android:textColor="#ffffff"
            android:textSize="@dimen/x12" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:orientation="vertical"
            android:layout_below="@+id/waveview"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <com.growatt.shinephone.view.AutoFitTextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/size_13"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white1"
                    />
                <com.growatt.shinephone.view.AutoFitTextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/size_13"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white1"
                    />
                <com.growatt.shinephone.view.AutoFitTextView
                    android:id="@+id/tvIncomeToday"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/size_13"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white1"
                    />
                <com.growatt.shinephone.view.AutoFitTextView
                    android:id="@+id/tvIncomeTotal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/size_13"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <com.growatt.shinephone.view.AutoFitTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/size_13"
                    android:text="@string/storage_day"
                    android:gravity="center"
                    android:textColor="@color/white1"
                    />
                <com.growatt.shinephone.view.AutoFitTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/size_13"
                    android:text="@string/storage_all"
                    android:gravity="center"
                    android:textColor="@color/white1"

                    />
                <com.growatt.shinephone.view.AutoFitTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/size_13"
                    android:text="@string/m127今日收益"
                    android:gravity="center"
                    android:textColor="@color/white1"
                    />
                <com.growatt.shinephone.view.AutoFitTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/size_13"
                    android:text="@string/m128总收益"
                    android:gravity="center"
                    android:textColor="@color/white1"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginRight="@dimen/x5"
        >
        <com.growatt.shinephone.view.AutoFitTextView
            android:id="@+id/textView11"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:textColor="@color/title_1"
            android:gravity="bottom"
            android:text="@string/storage_percent"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tvXY"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textColor="@color/line_color"
            android:textSize="14sp"
            />
    </LinearLayout>
