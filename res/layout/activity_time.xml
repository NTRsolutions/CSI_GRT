<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/blue_background"
    android:layout_height="match_parent"
    tools:context=".TimeActivity" >
    <include layout="@layout/header_view_title" android:id="@+id/headerView"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/headerView"
        android:layout_marginTop="@dimen/x12" >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="@dimen/x50"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:textSize="@dimen/x17"
            android:textColor="#ffffff" />
 
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView8"
            android:layout_marginLeft="@dimen/x11"
            android:layout_marginTop="@dimen/x5"
            android:layout_toRightOf="@+id/textView8"
            android:text="@string/all_time_start"
            android:textSize="@dimen/x17"
            android:textColor="#ffffff" />

        <TextView
            android:textSize="@dimen/x17"
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView9"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x5"
            android:text="@string/all_time_stop"
            android:textColor="#ffffff" />

        <TextView
            android:textSize="@dimen/x17"
            android:id="@+id/starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_alignBottom="@+id/textView9"
            android:layout_toRightOf="@+id/textView9"
            android:hint="@string/countryandcity_select"
            android:textColorHint="#eeeeee"
            android:textColor="#eeeeee" />

        <TextView
            android:id="@+id/stoptime"
            android:layout_width="wrap_content"
            android:textSize="@dimen/x17"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView10"
            android:layout_alignBottom="@+id/textView10"
            android:layout_alignLeft="@+id/starttime"
            android:hint="@string/countryandcity_select"
            android:textColorHint="#eeeeee"
            android:textColor="#eeeeee" />
    </RelativeLayout>

</RelativeLayout>
