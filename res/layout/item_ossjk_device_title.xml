<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y55"
    android:layout_gravity="center_horizontal"
    android:paddingLeft="@dimen/x15"
    android:paddingRight="@dimen/x5"
    android:background="@drawable/item_click_whitetogray"
    >
    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/y30"
        android:layout_gravity="center"
        android:src="@drawable/ossjk_today_icon"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/x5"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/y5"
            android:orientation="horizontal"
            >
           <com.growatt.shinephone.view.AutoFitTextView
               android:id="@+id/tvContent"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="bottom"
               android:text=""
               android:textSize="@dimen/size_18"
               android:textColor="@color/title_bg_white"
               android:textStyle="bold"
               />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1">
        <com.growatt.shinephone.view.AutoFitTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y15"
            android:maxWidth="@dimen/x50"
            android:text="@string/今日发电"
            android:textSize="@dimen/size_11"
            android:textColor="@color/note_bg_white"
            />
            <com.growatt.shinephone.view.AutoFitTextView
                android:id="@+id/tvUnit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y13"
                android:text="(kWh)"
                android:textSize="@dimen/size_11"
                android:textColor="@color/note_bg_white"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>