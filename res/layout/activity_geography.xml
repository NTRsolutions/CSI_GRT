<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
      android:background="@color/blue_background"
    tools:context=".GeographyActivity" >
    <include layout="@layout/header_view" android:id="@+id/headerView"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_marginTop="@dimen/x20" >

        <RelativeLayout
            android:id="@+id/power_r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginRight="@dimen/x15"
            android:layout_toRightOf="@+id/textView1"
            android:background="@drawable/power_text_bg"
            android:padding="@dimen/x5" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:lines="1" 
                android:maxEms="10"
                android:text=" "
                android:textColor="#ffffff" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x20"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            android:text="@string/geographydata_country"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50" >

        <RelativeLayout
            android:id="@+id/power_r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginRight="@dimen/x15"
            android:layout_toRightOf="@+id/textView3"
            android:background="@drawable/power_text_bg"
            android:padding="@dimen/x5" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:lines="1"
                android:maxEms="10"
                android:text=" "
                android:textColor="#ffffff" />
        </RelativeLayout>

        <com.growatt.shinephone.view.AutoFitTextView
            android:gravity="center_vertical"
            android:id="@+id/textView3"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x20"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            android:text="@string/geographydata_city"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50" >

        <RelativeLayout
            android:id="@+id/power_r3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginRight="@dimen/x15"
            android:layout_toRightOf="@+id/textView5"
            android:background="@drawable/power_text_bg"
            android:padding="@dimen/x5" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:lines="1"
                android:maxEms="10"
                android:text=" "
                android:textColor="#ffffff" />
        </RelativeLayout>

        <com.growatt.shinephone.view.AutoFitTextView
            android:gravity="center_vertical"
            android:id="@+id/textView5"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x20"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            android:text="@string/geographydata_timezone"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50" >

        <RelativeLayout
            android:id="@+id/power_r4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginRight="@dimen/x15"
            android:layout_toRightOf="@+id/textView7"
            android:background="@drawable/power_text_bg"
            android:padding="@dimen/x5" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:lines="1"
                android:maxEms="10"
                android:text=" "
                android:textColor="#ffffff" />
        </RelativeLayout>

        <com.growatt.shinephone.view.AutoFitTextView
            android:gravity="center_vertical"
            android:id="@+id/textView7"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x20"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            android:text="@string/geographydata_longitude"
            android:textColor="#ffffff" />
    </RelativeLayout>
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50" >

        <RelativeLayout
            android:id="@+id/power_r5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginRight="@dimen/x15"
            android:layout_toRightOf="@+id/textView9"
            android:background="@drawable/power_text_bg"
            android:padding="@dimen/x5" >

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:lines="1"
                android:maxEms="10"
                android:text=" "
                android:textColor="#ffffff" />
        </RelativeLayout>

    <com.growatt.shinephone.view.AutoFitTextView
        android:gravity="center_vertical"
            android:id="@+id/textView9"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/x20"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            android:text="@string/geographydata_latitude"
            android:textColor="#ffffff" />
    </RelativeLayout>
</LinearLayout>
