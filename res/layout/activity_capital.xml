<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_background"
    android:orientation="vertical"
    tools:context="com.growatt.shinephone.activity.CapitalActivity" >
    <include layout="@layout/header_view" android:id="@+id/headerView"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_marginTop="@dimen/x20" >

        <RelativeLayout
            android:id="@+id/power_r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x120"
            android:layout_marginRight="@dimen/x15"
            android:background="@drawable/power_text_bg"
            android:padding="@dimen/x5" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:lines="1"
                android:text=" "
                android:textColor="#ffffff" />
        </RelativeLayout>

        <com.growatt.shinephone.view.AutoFitTextView
            android:id="@+id/textView1"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x20"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            android:text="@string/capital_allincome"
            android:textColor="#ffffff" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
         >

        <RelativeLayout
            android:id="@+id/power_r5"
