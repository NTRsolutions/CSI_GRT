<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_background"
    tools:context="com.growatt.shinephone.ossactivity.OssJKDeviceListActivity">

    <include
        android:id="@+id/headerView"
        layout="@layout/header_view" />
    <!--第一行-->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/y6"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        android:paddingTop="@dimen/y6">

        <RadioButton
            android:id="@+id/radioGroup_rb1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/oss_jk_selector_bg_device"
            android:button="@null"
            android:gravity="center"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:text="@string/all_online"
            android:textColor="@color/oss_jk_selector_textcolor_device"
            android:textSize="@dimen/size_note" />

        <RadioButton
            android:id="@+id/radioGroup_rb2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:layout_weight="1"
            android:background="@drawable/oss_jk_selector_bg_device"
            android:button="@null"
            android:gravity="center"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:text="等待"
            android:textColor="@color/oss_jk_selector_textcolor_device"
            android:textSize="@dimen/size_note" />

        <RadioButton
            android:id="@+id/radioGroup_rb3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:layout_weight="1"
            android:background="@drawable/oss_jk_selector_bg_device"
            android:button="@null"
            android:gravity="center"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:text="@string/all_Fault"
            android:textColor="@color/oss_jk_selector_textcolor_device"
            android:textSize="@dimen/size_note" />

        <RadioButton
            android:id="@+id/radioGroup_rb4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x5"
            android:layout_weight="1"
            android:background="@drawable/oss_jk_selector_bg_device"
            android:button="@null"
            android:gravity="center"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:text="离线"
            android:textColor="@color/oss_jk_selector_textcolor_device"
            android:textSize="@dimen/size_note" />
    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleView"
        android:background="@color/gray_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        />
</LinearLayout>
