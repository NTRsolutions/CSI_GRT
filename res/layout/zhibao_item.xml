<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/x10" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/x5" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon"
             />

        <TextView
            android:id="@+id/textView_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x8"
            android:layout_marginRight="@dimen/x3"
            android:layout_toRightOf="@+id/imageView1"
            android:gravity="center_vertical"
            android:text="sdsadsa"
            android:maxEms="6"
            android:singleLine="true"  
			android:ellipsize="end" 
            android:textColor="#0099ff"
            android:textSize="@dimen/x15" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x5"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x5"
                    android:text="@string/zhibao_item_is"
                    android:textColor="#0099ff"
                    android:textSize="@dimen/x12" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/x3"
                    android:text="s154444"
                    android:textColor="#0099ff"
                    android:textSize="@dimen/x12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x5"
                   android:text="@string/zhibao_item_sn"
                    android:textColor="#0099ff"
                    android:textSize="@dimen/x12" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/x3"
                    android:text="s7584568"
                    android:textColor="#0099ff"
                    android:textSize="@dimen/x12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x5"
                    android:text="@string/zhibao_item_purchase"
                    android:textColor="#0099ff"
                    android:textSize="@dimen/x12" />

                <TextView
                    android:id="@+id/textView_sellbuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/x3"
                    android:text="@string/zhibao_item_Warranty"
                    android:textColor="#0099ff"
                    android:textSize="@dimen/x12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zhibao_item_Warranty"
                    android:textColor="#0099ff"
                    android:textSize="@dimen/x12" />

                <TextView
                    android:id="@+id/textView_buytime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/x3"
                    android:text="2014年12月12日"
                    android:textColor="#0099ff"
                    android:textSize="@dimen/x12" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>