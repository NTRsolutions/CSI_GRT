<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x160"
    android:background="@drawable/shadow_item_manuaact_listview"
    android:orientation="horizontal" 
    >
  <FrameLayout
      android:id="@+id/linerlayout_bg" 
      android:layout_width="match_parent"
    android:layout_height="@dimen/x158"
      >
   <ImageView 
       android:id="@+id/iv_bg"
       android:layout_width="match_parent"
       android:layout_height="@dimen/x158"
       android:scaleType="fitXY"
       android:src="@drawable/manual_bg"
       />
  <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="@dimen/x40"
      android:orientation="horizontal"
      android:layout_marginTop="@dimen/x80"
      android:background="#aa11a7f3"
      android:paddingLeft="@dimen/x40"
      android:paddingRight="@dimen/x5"
      >
  <TextView
      android:id="@+id/tv_faqact_count" 
      android:layout_width="@dimen/x18"  
      android:layout_height="@dimen/x18"  
      android:gravity="center"  
      android:singleLine="true"  
      android:textSize="@dimen/x10" 
      android:textColor="#ffffff" 
     android:layout_gravity="center_vertical"
      android:background="@drawable/shape_inforcenter_corner"  
      android:text="1"
     /> 
 <TextView 
     android:id="@+id/tv_faqact_title"
     android:layout_width="0dp"
     android:layout_height="match_parent"
     android:layout_weight="1"
     android:layout_marginLeft="@dimen/x8"
     android:layout_marginRight="@dimen/x8"
     android:gravity="center_vertical"
     android:textSize="@dimen/x16"
     />
 </LinearLayout>
 </FrameLayout>
</LinearLayout>
